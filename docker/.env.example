# LCA GNNs Docker Environment Configuration
# Copy this file to .env and customize for your deployment

# Python Configuration
PYTHONPATH=/app/src
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

# Logging Configuration
LOG_LEVEL=INFO

# Model Configuration
DEFAULT_MODEL_PATH=/app/trained_models/GNN_C_multi_best.pth
DEFAULT_DATASET_TYPE=GNN_C
DEFAULT_COUNTRY=Germany

# Development Configuration (for dev profile)
JUPYTER_ENABLE_LAB=yes
JUPYTER_TOKEN=your-secure-token-here

# Resource Limits (for docker-compose)
MEMORY_LIMIT=4G
CPU_LIMIT=2.0
MEMORY_RESERVATION=2G
CPU_RESERVATION=1.0

# Port Configuration
API_PORT=8000
JUPYTER_PORT=8888

# Data Paths (customize if needed)
DATA_PATH=./data
MODELS_PATH=./trained_models
REPORTS_PATH=./reports
CONFIGS_PATH=./configs
